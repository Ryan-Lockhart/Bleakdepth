{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "meson",
			"mode": "build",
			"problemMatcher": [
				"$meson-gcc"
			],
			"group": "build",
			"label": "Meson: Build",
		},
		{
			"label": "Meson: Configure for Release",
			"type": "shell",
			"command": "meson",
			"args": [
			  "setup",
			  "--reconfigure",
			  "${workspaceFolder}\\build",
			  "${workspaceFolder}",
			  "--buildtype",
			  "release",
			],
			"group": "build",
			"problemMatcher": [],
		  },
		  {
			  "label": "Meson: Configure for Debug",
			  "type": "shell",
			  "command": "meson",
			  "args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}\\build",
				"${workspaceFolder}",
				"--buildtype",
				"debug",
				"--debug",
			  ],
			  "group": "build",
			  "problemMatcher": [],
			},
	]
}